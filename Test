-- Function to create a TextLabel for an object
local function createTextLabel(object)
    local textLabel = Instance.new("TextLabel")
    textLabel.Text = object.Name
    textLabel.Size = UDim2.new(0, 100, 0, 20)
    textLabel.Position = UDim2.new(0, object.Position.X, 0, object.Position.Y + 50) -- Adjust Y position for better visibility
    textLabel.TextScaled = true
    textLabel.TextColor3 = Color3.new(1, 1, 1)
    textLabel.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    textLabel.BackgroundTransparency = 1 -- Make the background transparent
    textLabel.ZIndex = 2 -- Ensure the TextLabel appears on top of other GUI elements
    textLabel.AlwaysOnTop = true -- Ensure the TextLabel is always drawn on top of all parts
end

-- Function to ESP all objects in Workspace
local function ESPAllObjects()
    local workspace = game:GetService("Workspace")
    local objects = workspace:GetDescendants()

    for _, object in pairs(objects) do
        if object:IsA("BasePart") then
            createTextLabel(object)
        end
    end
end

-- Call the function to ESP all objects
ESPAllObjects()
